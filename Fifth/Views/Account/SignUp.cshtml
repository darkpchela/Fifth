@model UserSignUpVM

<div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 text-monospace text-warning bg-secondary border border-warning rounded">
    <form class="form-horizontal col-10 offset-1 p-1 text-center" asp-controller="Account" asp-action="SignUp" method="POST">
        <div class="control-group mt-3">
            <label class="control-label" for="email">Login:</label>
            <div class="controls">
                <input type="text" asp-for="Login" class="bg-dark form-control text-warning">
            </div>
        </div>
        <div class="control-group mt-3">
            <label class="control-label" for="password">Password:</label>
            <div>
                <input type="password" asp-for="Password" placeholder="" class="bg-dark form-control text-warning">
            </div>
        </div>
        <div class="control-group mt-3">
            <label class="control-label" for="password">Confirm password:</label>
            <div class="controls">
                <input type="password" asp-for="ConfirmPassword" placeholder="" class="bg-dark form-control text-warning">
            </div>
        </div>
        <div class="control-group mt-3">
            <div class="controls">
                <button class="btn btn-dark text-warning">Sign Up</button>
            </div>
        </div>
        <div asp-validation-summary="All" class="w-100 mt-4">
        </div>
    </form>
</div>