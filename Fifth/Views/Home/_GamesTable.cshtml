@model IEnumerable<SessionVM>
@inject Fifth.Interfaces.ISessionTagCrudService sessionTagService

<div class="text-center">
    <h3 class="text-monospace text-warning">Games</h3>
</div>
<div id="gameCards" class="d-flex flex-row flex-wrap bg-dark justify-content-around p-3 border border-warning rounded h-100 overflow-auto">
    <div class="p-2">
        <div class="ml-1 mr-1 bg-success">
            <div class="card-body border rounded border-warning text-center">
                <h5 class="card-title">Your game</h5>
                <span class="card-text"></span>
                <a id="newGame" class="text-warning">Create</a>
            </div>
        </div>
    </div>
    @foreach (var g in  Model)
    {
        <div data-id="@g.Id" class="p-2">
            <div class="card border rounded border-warning ml-1 mr-1 bg-secondary">
                <div class="card-body border rounded border-warning text-center">
                    <h5 class="card-title"> @g.Name</h5>
                    <h6 class="card-text">@g.UserName</h6>
                    <a asp-action="Game" asp-route-id="@g.Id" class="text-warning">Join</a>
                </div>
                <div class="card-footer">
                    @foreach(var t in await sessionTagService.GetTagsBySessionAsync(g.Id))
                    {
                        <span>#@t.Value</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

<div id="cardPrototype" data-id="" class="p-2" hidden>
    <div class="card border rounded border-warning ml-1 mr-1 bg-secondary">
        <div class="card-body border rounded border-warning text-center">
            <h5 name="game" class="card-title"></h5>
            <h6 name="user" class="card-text"></h6>
            <a name="ref" class="text-warning">Join</a>
        </div>
    </div>
</div>